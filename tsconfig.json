{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@messages/*": ["./messages/*"],
      "@messages": ["./messages/index.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "messages/**/*.ts",       // ğŸ‘ˆ Ø£Ø¶Ù Ù‡Ø°Ø§
    "next-intl.config.ts",
    "src/types/next-auth.d.ts"    // ğŸ‘ˆ ÙˆØ£Ø¶Ù Ù‡Ø°Ø§
  ],
  "exclude": ["node_modules"]
}
